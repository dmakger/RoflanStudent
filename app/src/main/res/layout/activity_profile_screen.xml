<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    tools:context=".presentation.ProfileScreen">

    <TextView
        android:id="@+id/txtName"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"

        android:fontFamily="@font/montserrat_bold"
        android:text="Зубенко Петечка Петрович"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="36sp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTitleClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="55dp"

        android:text="Класс:"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="18dp"

        app:layout_constraintTop_toBottomOf="@id/txtName"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/txtClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"

        android:text="7А"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="18dp"

        app:layout_constraintTop_toTopOf="@id/txtTitleClass"
        app:layout_constraintLeft_toRightOf="@id/txtTitleClass"
        />

    <TextView
        android:id="@+id/txtTitleBirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="55dp"

        android:text="День рождения:"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="18dp"

        app:layout_constraintTop_toBottomOf="@id/txtTitleClass"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/txtBirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"

        android:text="19.02.2010"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="18dp"

        app:layout_constraintTop_toTopOf="@id/txtTitleBirthday"
        app:layout_constraintLeft_toRightOf="@id/txtTitleBirthday"
        />

    <Button
        android:id="@+id/btnLesson"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/montserrat_bold"
        android:onClick="onClickLessons"

        android:paddingHorizontal="22dp"
        android:paddingVertical="20dp"
        android:text="Предметы"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>